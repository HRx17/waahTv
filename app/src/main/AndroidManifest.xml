<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.Beta1.waahTv">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />
    <uses-feature
        android:name="android.software.leanback"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.FirstTV"
        android:usesCleartextTraffic="true"
        tools:ignore="MissingTvBanner">
        <activity android:name="com.Beta1.waahTv.Signup"></activity>
        <activity android:name="com.Beta1.waahTv.Login" />
        <activity android:name="com.Beta1.waahTv.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.Beta1.waahTv.ui.LiveDetail" />
        <activity android:name="com.Beta1.waahTv.ui.PlaybackActivity" />
        <activity android:name="com.Beta1.waahTv.ui.BrowseErrorActivity" />
        <activity android:name="com.Beta1.waahTv.ui.SearchActivity" />
        <activity android:name="com.Beta1.waahTv.ui.SettingsActivity" />
        <activity android:name="com.Beta1.waahTv.ui.SeriesDetailsActivity" />
        <activity
            android:name="com.Beta1.waahTv.ui.MainActivity"
            android:banner="@mipmap/ic_launcher"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:logo="@mipmap/ic_launcher"
            android:screenOrientation="landscape">
        </activity>
    </application>

</manifest>